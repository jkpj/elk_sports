<% content_for :title, "Unohtuneen salasanan vaihto" %>
<h1><%= yield :title %></h1>
<div class="instructions">Jos olet unohtanut salasanasi,
  syötä alla olevaan kenttään sähköpostiosoitteesi.</div>
<%= flash_error %>
<%= flash_notice %>
<%= form_tag(reset_password_path) do %>
  <%= label_tag :email, 'Sähköposti' %>
  <%= text_field_tag :email %><br/>
  <%= submit_tag 'Tilaa uusi salasana' %>
<% end %>