<%= link_to "Toimitsijan etusivu", official_root_path, :class => 'navigation' %>
<% if @race %>
  &gt; <%= @race.new_record? ? 'Uusi kilpailu' : @race.name %>
<% elsif @series %>
  &gt; <%= link_to @series.race.name, edit_official_race_path(@series.race), :class => 'navigation' %>
  &gt; <%= @series.name %>
<% elsif @competitor %>
  &gt; <%= link_to @competitor.series.race.name, edit_official_race_path(@competitor.series.race), :class => 'navigation' %>
  &gt; <%= link_to @competitor.series.name, edit_official_series_path(@competitor.series), :class => 'navigation' %>
  &gt; <%= full_name(@competitor) %>
<% end %>
<% if current_user and current_user.admin? %>
  | <%= link_to "Admin", admin_root_path, :class => 'navigation' %>
<% end %>