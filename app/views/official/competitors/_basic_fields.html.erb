<%= f.label :first_name %>
<%= f.text_field :first_name %>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
<br/>
<% unless f.object.series.sub_series.empty? %>
  <%= f.label :sub_series %>
  <%= f.collection_select :sub_series_id, f.object.series.sub_series, :id, :name,
    :include_blank => 'Kuuluu pääsarjaan' %>
<% end %>
<%= f.label :club %>
<%= f.collection_select :club_id, Club.all, :id, :name %>
<% if show_number %>
  <%= f.label :number %>
  <%= f.text_field :number, :size => 5 %>
<% end %>