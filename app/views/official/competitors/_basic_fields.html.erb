<%= f.label :first_name %>
<%= f.text_field :first_name %>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
<br/>
<% unless f.object.series.age_groups.empty? %>
  <%= f.label :age_group %>
  <%= f.collection_select :age_group_id, f.object.series.age_groups, :id, :name,
    :include_blank => 'Kuuluu pääsarjaan' %>
<% end %>
<%= f.label :club %>
<%= f.collection_select :club_id, Club.all, :id, :name %>
<% if show_number %>
  <%= f.label :number %>
  <%= f.text_field :number, :size => 5 %>
<% end %>