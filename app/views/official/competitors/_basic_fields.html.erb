<%= f.label :first_name %>
<%= f.text_field :first_name %>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
<br/>
<% unless f.object.series.age_groups.empty? %>
  <%= f.label :age_group %>
  <%= f.collection_select :age_group_id, f.object.series.age_groups, :id, :name,
    :include_blank => 'Kuuluu pääsarjaan' %>
<% end %>
<%#= f.label :club_id, 'Seura/piiri' %>
<%= select_tag :club, options_from_collection_for_select(f.object.series.race.clubs,
  :id, :name, f.object.club_id), :include_blank => true %>
<%= javascript_tag do %>
  $("#club").sexyCombo({
    triggerSelected: true,
    emptyText: 'Piiri/seura',
    autoFill: true,
    suffix: '_name',
    hiddenSuffix: '_id'
  });
<% end %>